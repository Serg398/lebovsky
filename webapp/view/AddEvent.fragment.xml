<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        class="sapUiSizeCompact"
        contentHeight="300px"
        contentWidth="800px"
        title="Новый чек">
        <HBox>
            <Text
                width="3rem"
                text="Дата: "
                class="fragment colorText" />
            <DatePicker
                width="12rem"
                id="DP"
                displayFormat="short"
                class="fragment"
                value="{Table>/new/DP}" />
        </HBox>
        <HBox>
            <Text
                text="От: "
                width="3rem"
                class="fragment colorText" />
            <Select
                width="12rem"
                forceSelection="false"
                selectedKey="{Table>/new/Email1}"
                items="{Table>/front/users}">
                <core:Item
                    key="{Table>Email}"
                    text="{Table>name} {Table>firstname}" />
            </Select>
            <Text
                text="Кому: "
                width="3rem"
                class="fragment colorText" />
            <Select
                forceSelection="false"
                selectedKey="{Table>/new/Email2}"
                items="{Table>/front/users}"
                width="12rem">
                <core:Item
                    key="{Table>Email}"
                    text="{Table>name} {Table>firstname}" />
            </Select>
            <Text
                text="Сумма: "
                width="3rem"
                class="fragment colorText" />
            <Input
                value="{path: 'Table>/new/money',
                        type: 'sap.ui.model.type.Integer'}"
                placeholder="Введите сумму"
                class="sapUiSmallMarginBegin" />
        </HBox>
        <Text
            text="Комментарий:"
            width="6rem"
            class="fragment colorText" />
        <Input
            value="{Table>/new/comments}"
            placeholder="Комментарий"
            class="fragment" />
        <HBox class="fragmentButton">
            <Button
                type="Accept"
                text="Отправить"
                press="addEvent"
                class="sapUiSmallMarginBegin"></Button>
            <Button
                type="Reject"
                text="Отмена"
                press="onCloseDialog"
                class="sapUiSmallMarginBegin"></Button>
        </HBox>
    </Dialog>
</core:FragmentDefinition>