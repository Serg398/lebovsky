<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core"
	displayBlock="true">
	<Page
		id="Main"
		showHeader="false"
		enableScrolling="true">
		<tnt:ToolPage id="toolPage" class="toolHead">
			<tnt:header >
				<tnt:ToolHeader >
					<Image
						height="2.5rem"
						class="sapUiSmallMarginBegin"
						src="https://cdn.icon-icons.com/icons2/1091/PNG/512/profits_78367.png" />
					<Title
						level="H1"
						text="Система учета финансов">
						<layoutData>
							<OverflowToolbarLayoutData shrinkable="true" />
						</layoutData>
					</Title>
					<Title
						level="H3"
						titleStyle="H6"
						text="">
						<layoutData>
							<OverflowToolbarLayoutData shrinkable="true" />
						</layoutData>
					</Title>
					<ToolbarSpacer>
						<layoutData>
							<OverflowToolbarLayoutData
								priority="NeverOverflow"
								minWidth="20px" />
						</layoutData>
					</ToolbarSpacer>
					<tnt:ToolHeaderUtilitySeparator />
					<!-- <OverflowToolbarButton
						text="Search"
						tooltip="Search"
						icon="sap-icon://search"
						type="Transparent" />
					<OverflowToolbarButton
						text="Tasks"
						tooltip="Tasks"
						icon="sap-icon://circle-task"
						type="Transparent" />
					<OverflowToolbarButton
						text="Notifications"
						tooltip="Notifications"
						icon="sap-icon://bell"
						type="Transparent" /> -->
					<Title text="{Table>/front/account/0/name}" />
					<Avatar
						press="pressAvatar"
						src="https://img.icons8.com/color-glass/344/guest-male.png"
						displaySize="XS">
						<!-- <layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData> -->
					</Avatar>
					<Link
						text="Выйти"
						press="logout"></Link>
					<!-- <OverflowToolbarButton
						text="Custom Action"
						tooltip="Custom Action"
						icon="sap-icon://grid"
						type="Transparent" /> -->

				</tnt:ToolHeader>
			</tnt:header>
			<tnt:subHeader>
				<tnt:ToolHeader>
					<Button
						text="События"
						press="handleNav">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
						<customData>
							<core:CustomData
								key="target"
								value="p1" />
						</customData>
					</Button>
					<Button
						text="Сводка"
						press="handleNav">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
						<customData>
							<core:CustomData
								key="target"
								value="p2" />
						</customData>
					</Button>
					<Button
						text="Новый чек"
						press="openFragment"
						class="sapUiSmallMarginBegin" />
				</tnt:ToolHeader>
			</tnt:subHeader>
			<tnt:mainContents>
				<NavContainer id="navCon">
					<Page
						id="p1"
						showHeader="false"
						title="События">
						<List
							class="sapUiSmallMarginTop"
							delete="delItemList"
							mode="Delete"
							id="ShortProductList"
							items="{Table>/front/events}">
							<CustomListItem
								type="Active"
								press="playItem">
								<HBox>
									<HBox
										width="80%"
										alignItems="Center"
										alignContent="Center">
										<Image
											class="imgCahsItem"
											src="https://img.icons8.com/nolan/344/check-dollar.png"
											width="50px" />
										<Text 
											class="colorText"
											width="5rem"
											text="Чек № {Table>id}" />
										<Text
											class="dp colorText"
											width="5rem"
											text="{Table>DP}" />
										<VBox>
											<HBox>
												<Text
													width="3rem"
													text="Кто: "
													class="sapUiSmallMarginBegin colorText" />
												<Text
													width="30rem"
													text="{Table>name1}"
													class="sapUiSmallMarginBegin colorText" />
											</HBox>
											<HBox>
												<Text
													width="3rem"
													text="Кому: "
													class="sapUiSmallMarginBegin colorText" />
												<Text
													width="30rem"
													text="{Table>name2}"
													class="sapUiSmallMarginBegin colorText" />
											</HBox>
										</VBox>

									</HBox>
									<HBox
										width="20%"
										alignItems="Center"
										alignContent="Center">
										<Text
											width="6.5rem"
											text="Размер суммы: "
											class="sapUiSmallMarginBegin colorText" />
										<Text
											class=" colorText"
											width="4rem"
											text="{Table>money}" />
										<Image
											width="30px"
											src="https://img.icons8.com/color/344/comments--v1.png"
											press="comentPopoverPress" />
									</HBox>
								</HBox>
							</CustomListItem>
						</List>
					</Page>
					<Page
						id="p2"
						showHeader="false"
						title="Общая сводка">
						<FlexBox
							direction="Row"
							renderType="Bare"
							wrap="Wrap"
							width="100%"
							displayInline="true"
							fitContainer="true"
							items="{Table>/front/users}">
							<items class="tail">
								<GenericTile
									header="{Table>name}"
									subheader="Баланс: {Table>money}"
									press="onTilePress">
									<TileContent>
										<ImageContent src="https://cdn-icons-png.flaticon.com/512/18/18221.png?w=826" />
									</TileContent>
								</GenericTile>
							</items>
						</FlexBox>
					</Page>
				</NavContainer>
			</tnt:mainContents>
		</tnt:ToolPage>


